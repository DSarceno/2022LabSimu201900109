// 2. declaraci√≥n de variables para abrir y leer el archivo
//int cont = 0;
char temp[50]; // string temporal
FILE* dat;
char *name = "data.dat";
//float x;
//float y[10];

// 3. apertura y lectura del archivo
if ((dat = fopen(name, "r")) == NULL){
  puts("Error de apertura.");
  return 1;
} // END IF

while (!feof(dat)){
  fgets(temp,50,dat);
  printf("%s",temp);
} // END WHILE
rewind(dat); // regresamos el cusror al inicio del fichero
puts(" ");
